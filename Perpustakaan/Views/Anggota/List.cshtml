@model IEnumerable<PerpustakaanViewModel.AnggotaViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KodeAnggota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alamat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telepon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KodeAnggota)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nama)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alamat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telepon)
        </td>
        <td>
            <input type="button" value="Edit" class="btn btn-warning btn-edit" data-id="@item.Id " />
            <input type="button" value="Delete" class="btn btn-danger btn-delete" data-id="@item.Id" />
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    $(".btn-edit").click(function () {
        //alert('Idnya adalah: ' + $(this).attr("data-id"));
        $.ajax({
            url: '@Url.Action("Edit", "Anggota")',
            type: 'get',
            data: { id: $(this).attr("data-id") },
            success: function (result) {
                $(".modal-body").html(result);
                $("#modal-form").modal("show");
            }
        });
    });

    $(".btn-delete").click(function () {
        //alert('Idnya adalah: ' + $(this).attr("data-id"));
        $.ajax({
            url: '@Url.Action("Delete", "Anggota")',
            type: 'get',
            data: { id: $(this).attr("data-id") },
            success: function (result) {
                $(".modal-body").html(result);
                $("#modal-form").modal("show");
            }
        });
    });
</script>