@model IEnumerable<PerpustakaanViewModel.PenerbitViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KodePenerbit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamaPenerbit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamaPengarang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlamatPenerbit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telepon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KodePenerbit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamaPenerbit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamaPengarang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlamatPenerbit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telepon)
        </td>
        <td>
            <input type="button" value="Edit" class="btn btn-warning btn-edit" data-id="@item.Id">
            <input type="button" value="Delete" class="btn btn-danger btn-delete" data-id="@item.Id">
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    $(".btn-edit").click(function () {
        //alert('Id-nya adalah :' + $(this).attr("data-id"));
        $.ajax({
            url: '@Url.Action("Edit", "Penerbit")',
            type :'get',
            data : {id:$(this).attr("data-id")},
            success: function (result){
                $(".modal-body").html(result);
                $("#modal-form").modal("show");
            }

        });
    });

    $(".btn-delete").click(function () {
        //alert('Id-nya adalah :' + $(this).attr("data-id"));
        $.ajax({
            url: '@Url.Action("Delete", "Penerbit")',
            type: 'get',
            data: { id: $(this).attr("data-id") },
            success: function (result) {
                $(".modal-body").html(result);
                $("#modal-form").modal("show");
            }

        });
    });
</script>
