@model PerpustakaanViewModel.PemasokViewModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Pemasok</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.KodePemasok)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KodePemasok)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.KodePembelian)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KodePembelian)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.KodePenerbit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KodePenerbit)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NamaPenerbit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NamaPenerbit)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AlamatPemasok)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlamatPemasok)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telepon)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telepon)
        </dd>
    
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="button" value="Delete" class="btn btn-danger btn-delete-conf" data-id="@Model.Id" />
            <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal" />
        </div>
    }
</div>

<script type="text/javascript">
    $(".btn-delete-conf").click(function () {
        //alert('Id-nya adalah :' + $(this).attr('data-id'));
        $.ajax({
            url: '@Url.Action("DeleteConfirm","Pemasok")',
            type: 'post',
            data: { id: $(this).attr('data-id') },
            success : function (result)
            {
                if (result.success) {
                    $("#modal-form").modal("hide");
                    ShowList();
                }
                else {
                    alert('Error :' + result.Message);
                }
            }
        })
    });

</script>